// Used for general requests.  Can also add channels for raw reports and responses.
Thing mqtt:topic:yolink "Yolink Topics" (mqtt:broker:XXXXXXXXXX)
{
    Channels:
      Type string : request "Send a YoLink request" [ commandTopic = "yolink/request" ]
}

// Chanels for "home" information.  You can also create a thing and channels for "manage".
Thing mqtt:topic:yolink:home "Yolink Home Info" (mqtt:broker:XXXXXXXXXX)
{
    Channels:
      Type string : id      [ stateTopic = "yolink/home/id"      ]
      Type string : devices [ stateTopic = "yolink/home/devices" ]
}

// Leak sensors.
Thing mqtt:topic:yolink:kitchen_sink_leak_sensor "Kitchen Sink Leak Sensor" (mqtt:broker:XXXXXXXXXX)
{
    Channels:
      Type string : state   [ stateTopic = "yolink/XXXXXXXXXXXXXXXX/state"                                       ]
      Type string : battery [ stateTopic = "yolink/XXXXXXXXXXXXXXXX/battery"                                     ]
      Type number : signal  [ stateTopic = "yolink/XXXXXXXXXXXXXXXX/signal" , transformationPattern="RB(dBm.rb)" ]
      Type switch : online  [ stateTopic = "yolink/XXXXXXXXXXXXXXXX/online" , on="true", off="false"             ]
}

