// Dimmer.  Added request and brigtness channels to show extra device control.
Thing mqtt:topic:yolink:example_dimmer "Example Dimmer" (mqtt:broker:XXXXXXXXXX)
{
    Channels:
      Type switch : state      [ stateTopic = "yolink/XXXXXXXXXXXXXXXX/state"     , commandTopic = "yolink/XXXXXXXXXXXXXXXX/request/setState"           , on="on", off="off" ]
      Type number : signal     [ stateTopic = "yolink/XXXXXXXXXXXXXXXX/signal"    , transformationPattern="RB(dBm.rb)"                                                       ]
      Type switch : online     [ stateTopic = "yolink/XXXXXXXXXXXXXXXX/online"    , on="true", off="false"                                                                   ]
      Type number : brightness [ stateTopic = "yolink/XXXXXXXXXXXXXXXX/brightness", commandTopic = "yolink/XXXXXXXXXXXXXXXX/request/setState/brightness"                     ]
      Type string : request    [                                                    commandTopic = "yolink/XXXXXXXXXXXXXXXX/request"                                         ]
}

// Manipulator.
Thing mqtt:topic:yolink:whole_house_valve "Whole House Valve" (mqtt:broker:XXXXXXXXXX)
{
